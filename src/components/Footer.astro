<style>
    footer {
        padding: 3rem 1rem;
        margin-top: auto;
        border-top: 1px solid var(--border-color);
        background: var(--background);
        text-align: center;
    }

    /* ライトモード調整 */
    :global(html:not(.dark)) footer {
        background: var(--background); 
    }

    .footer-container {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    /* === ソーシャルアイコン === */
    .social-links {
        display: flex;
        gap: 1.2rem;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
        text-decoration: none;
        
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(0,0,0,0.03);
        
        transition: color 0.2s, background-color 0.2s;
    }

    :global(html.dark) .social-links a {
        background: rgba(255,255,255,0.05);
    }

    /* 色設定 */
    .social-links a[aria-label="Note"]:hover { background: #41c9b4; color: white; }
    .social-links a[aria-label="Zenn"]:hover { background: #3ea8ff; color: white; }
    .social-links a[aria-label="Qiita"]:hover { background: #55c500; color: white; }
    .social-links a[aria-label="Twitter"]:hover,
    .social-links a[aria-label="Daily"]:hover { background: #1da1f2; color: white; }
    .social-links a[aria-label="Tech"]:hover { background: #f59518; color: white; }
    .social-links a[aria-label="GitHub"]:hover { background: #333; color: white; }
    :global(html.dark) .social-links a[aria-label="GitHub"]:hover { background: #fff; color: #333; }

    /* その他共通ホバー */
    .social-links a:hover {
        color: #fff;
        /* background: var(--accent-blue); */
    }

    /* === クレジット周り === */
    .credits {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
        flex-wrap: wrap;
        justify-content: center;
    }

    .divider { opacity: 0.3; }

    .powered-by {
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .powered-by a {
        color: var(--text-main);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }

    .powered-by a:hover { color: var(--accent-blue); }

    .rocket-icon { color: var(--accent-yellow); }

    @media (max-width: 600px) {
        .divider { display: none; }
        .credits { flex-direction: column; gap: 0.3rem; }
    }
</style>