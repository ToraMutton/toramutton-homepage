        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }
    .skill-card:hover, .skill-card:focus {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }
    .skill-card:hover .icon-wrapper, .skill-card:focus .icon-wrapper {
        transform: translateY(-15px);
    }
    .skill-card:hover .skill-name, .skill-card:focus .skill-name {
        opacity: 1;
        transform: translateY(0);
    }
    .skill-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    /* === 6. 興味・好きなこと === */
    .interests-grid {
        display: grid;
        grid-template-columns: 1fr; /* スマホだと1列 */
        gap: 1.5rem;
        margin-bottom: 3rem;
    }
    
    /* PCでは横並び or グリッド */
    @media (min-width: 768px) {
        .interests-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
    }

    .interest-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .interest-header {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 0.8rem;
        margin-bottom: 0.2rem;
    }

    .interest-title {
        font-weight: 700;
        font-family: "JetBrains Mono", monospace;
