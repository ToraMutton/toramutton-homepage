<script>
    // Observer設定
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // 画面に入ったらクラスを追加
                entry.target.classList.add('visible');
            }
        });
    }, { threshold: 0.5 }); // 50%くらい見えたら発火

    // 全てのh2が監視対象
    document.querySelectorAll('.about-content h2').forEach((h2) => {
        observer.observe(h2);
    });
</script>

<style>
    /* === 1. 基本設定・リセット === */
    :global(.last-updated-on),
    :global(time) {
        display: none;
    }

    .about-content {
        line-height: 1.8;
        color: var(--text-main);
    }

    /* === h2のカスタム設定 === */
    .about-content h2 {
        position: relative;
        display: block; 
        width: 100%;
        margin-top: 4rem;
        margin-bottom: 1.5rem;
        border: none !important;
        padding-bottom: 5px;
    }

    /* 下線の設定 */
    .about-content h2::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        height: 1px;
        width: 0%;
        background-color: var(--accent-blue);
        transition: width 0.8s ease-out;
    }

    .about-content h2.visible::after {
        width: 100%;
    }

    /* === ライトモード視認性調整 === */
    :global(html:not(.dark)) {
        /* ラベル調整 */
        .spec-label {
            color: #2563eb;
            opacity: 1;
        }

        /* 黄色の文字の調整 */
        .text-yellow-small, 
        .text-yellow {
            color: #b45309;
            font-weight: 600;
        }

        /* カテゴリタイトル（Programming & Webなど） */
        .category-title {
            color: #1d4ed8;
            opacity: 1;
        }
    }

    /* === 2. タイムライン === */
    .timeline {
        margin: 2.5rem 0;
        border-left: 2px solid var(--accent-blue);
        padding-left: 1.5rem;
    }
    .timeline-item {
        margin-bottom: 2rem;
        position: relative;
    }
    .timeline-item::before {
        content: "";
        position: absolute;
        left: calc(-1.5rem - 6px); /*青丸の位置調整*/ 
        top: 0.5rem;
        width: 10px;
        height: 10px;
        background: var(--background);
        border: 2px solid var(--accent-blue);
        border-radius: 50%;
    }
    .timeline-item.current::before {
        background: var(--accent-secondary);
        border-color: var(--accent-secondary);
        box-shadow: 0 0 12px var(--accent-secondary);
    }
    .time {
        font-weight: bold;
        color: var(--accent-blue);
        font-family: "JetBrains Mono", monospace;
        font-size: 1.1rem;
    }
    .desc {
        margin-top: 0.3rem;
        font-size: 0.95rem;
    }

    /* === 3. カード・レイアウト === */
    .specs-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin: 2rem 0;
    }
    .glass-card {
        background: var(--surface);
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid var(--border-color);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    :global(html.dark) .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border-color: rgba(255, 255, 255, 0.1);
    }
    .card-header {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        margin-bottom: 1rem;
    }
    .card-note {
        font-size: 0.8rem;
        color: var(--accent-secondary);
        margin-top: -0.5rem;
        margin-bottom: 0.8rem;
        font-weight: bold;
    }
    .spec-card h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 700;
    }

    /* === 4. スペック表の整列 === */
