    }
    .text-yellow, .text-yellow-small {
        font-size: 0.8rem;
        color: var(--accent-secondary);
        font-weight: 100;
        margin-left: 0.5rem;
        font-family: "JetBrains Mono", monospace;
    }

    /* === 5. スキルアイコン・グリッド === */
    .skill-category {
        margin-bottom: 3.5rem;
    }
