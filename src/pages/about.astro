        list-style: none;
        padding: 0;
        margin: 0;
    }
    .spec-list li {
        display: grid;
        grid-template-columns: 80px 1fr;
        gap: 1rem;
        padding: 0.6rem 0;
        border-bottom: 1px dashed var(--border-color);
        align-items: baseline;
    }
    .spec-list li:last-child {
        border-bottom: none;
    }
    .spec-label {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--accent-blue);
        font-family: "JetBrains Mono", monospace;
